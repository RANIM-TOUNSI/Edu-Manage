<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- CrÃ©ation de la table etudiant -->
    <changeSet id="001-create-etudiant-table" author="ranim">
        <createTable tableName="etudiant">
            <column name="matricule" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="nom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="prenom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(150)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="date_inscription" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
