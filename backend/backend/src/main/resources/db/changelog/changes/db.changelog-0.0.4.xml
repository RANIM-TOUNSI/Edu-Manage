<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Update app_user table with new fields -->
    <changeSet id="008-add-details-to-app-user" author="ranim">
        <addColumn tableName="app_user">
            <column name="nom" type="VARCHAR(255)" defaultValue="Admin">
                <constraints nullable="false"/>
            </column>
            <column name="prenom" type="VARCHAR(255)" defaultValue="User">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)" defaultValue="admin@test.com">
                <constraints nullable="false" unique="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
