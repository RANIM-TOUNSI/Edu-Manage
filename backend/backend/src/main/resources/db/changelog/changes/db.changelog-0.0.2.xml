<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Table Formateur -->
    <changeSet id="002-create-formateur-table" author="ranim">
        <createTable tableName="formateur">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nom" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="specialite" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Table Cours -->
    <changeSet id="003-create-cours-table" author="ranim">
        <createTable tableName="cours">
            <column name="code" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="titre" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="formateur_id" type="BIGINT">
                <constraints foreignKeyName="fk_cours_formateur" references="formateur(id)"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Table Inscription -->
    <changeSet id="004-create-inscription-table" author="ranim">
        <createTable tableName="inscription">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_inscription" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="etudiant_matricule" type="VARCHAR(50)">
                <constraints nullable="false" foreignKeyName="fk_inscription_etudiant" references="etudiant(matricule)"/>
            </column>
            <column name="cours_code" type="VARCHAR(255)">
                <constraints nullable="false" foreignKeyName="fk_inscription_cours" references="cours(code)"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Table Note -->
    <changeSet id="005-create-note-table" author="ranim">
        <createTable tableName="note">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="valeur" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="etudiant_matricule" type="VARCHAR(50)">
                <constraints nullable="false" foreignKeyName="fk_note_etudiant" references="etudiant(matricule)"/>
            </column>
            <column name="cours_code" type="VARCHAR(255)">
                <constraints nullable="false" foreignKeyName="fk_note_cours" references="cours(code)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
